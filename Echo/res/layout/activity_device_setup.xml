<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dev_setup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.cs.washington.cse477.DeviceSetupActivity"
    tools:ignore="MergeRootFrame" >

    <Spinner
        android:id="@+id/dev_setup_security_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dev_setup_security"
        android:layout_centerHorizontal="true"
        android:spinnerMode="dropdown"
        android:layout_alignLeft="@+id/dev_setup_networks_spinner"
        android:layout_alignRight="@+id/dev_setup_networks_spinner"
        android:layout_marginBottom="18dp" />
    
    <TextView
        android:id="@+id/dev_setup_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="fill"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="italic"
        android:text="@string/dev_setup_description" />
    
    <TextView
        android:id="@+id/dev_setup_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/dev_setup_description"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/dev_setup_net_sel" />
    
    <Spinner
        android:id="@+id/dev_setup_networks_spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/dev_setup_refresh_networks_b"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/dev_setup_select"
        android:layout_marginTop="6dp" />
<!--         android:layout_alignRight="@+id/dev_setup_select" -->

    <ImageView 
        android:id="@+id/dev_setup_refresh_networks_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:minWidth="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/dev_setup_networks_spinner"
        android:layout_alignTop="@+id/dev_setup_networks_spinner"
        android:scaleType="center"
        android:onClick="initWifiScan"
        android:contentDescription="@string/dev_setup_refresh_b_desc"
        android:src="@drawable/ic_action_refresh_dark" />
<!--     android:layout_toRightOf="@+id/dev_setup_networks_spinner" -->
    
    <TextView
        android:id="@+id/dev_setup_security"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dev_setup_networks_spinner"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/dev_setup_encr_sel" />
    
    
    
    <TextView
        android:id="@+id/dev_setup_password_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/dev_setup_security_spinner"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/dev_setup_sec_sel" />
    
    
    <Button
        android:id="@+id/dev_setup_setup_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dev_setup_password"
        android:layout_centerHorizontal="true"
     	android:onClick="configureFlyport"   
        android:focusable="false"
        android:minWidth="140dp"
        android:focusableInTouchMode="false"
        android:text="@string/dev_setup_b" />
    
    <EditText
        android:id="@+id/dev_setup_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dev_setup_password_prompt"
        android:layout_alignLeft="@+id/dev_setup_networks_spinner"
        android:layout_alignRight="@+id/dev_setup_networks_spinner"
        android:layout_marginBottom="28dp"
        android:inputType="textPassword" >
    </EditText>

    

    

    

    

    

    
    
</RelativeLayout>
