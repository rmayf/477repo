<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" >

    <ImageView
        android:id="@+id/notification_play"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:src="@drawable/ic_action_play"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="6dip"
        android:contentDescription="@string/notification_play_desc"
         />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="6dip"
        android:layout_toRightOf="@+id/notification_play"
        android:layout_toLeftOf="@+id/notification_delete"
        android:orientation="vertical" >

        <TextView
	        android:id="@+id/notification_text"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:textSize="16sp" />
	    
	    <TextView
	        android:id="@+id/notification_text_date"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:textSize="12sp" />
    </LinearLayout>
    
    <ImageView
        android:id="@+id/notification_delete"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/notification_delete"
        android:src="@drawable/ic_action_remove" />
    

</RelativeLayout>